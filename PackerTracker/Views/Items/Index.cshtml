@using PackerTracker.Models;

<h2>Packer Tracker</h2>

@if (Model.Count == 0)
{
    <p>There are no items in your list.</p>
}

<ul>
    @foreach(Item item in Model)
    {
        <li>
            <a href="/items/@item.Id">Name: @item.Name</a>
            @* <p>Packed: @item.Packed</p>
            <p>Purchased: @item.Purchased</p>
            <p>Price: @item.Price</p>
            <p>Weight: @item.Weight</p> *@
        </li>
    }
</ul>

<a href="/items/new">Add a new item.</a>

<br>
<br>

<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>
